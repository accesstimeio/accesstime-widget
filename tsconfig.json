{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "jsx": "react-jsx",
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}