{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}